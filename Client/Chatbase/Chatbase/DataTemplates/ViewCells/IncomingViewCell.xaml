<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" 
          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
          x:Class="Chatbase.DataTemplates.ViewCells.IncomingViewCell">
    <StackLayout Margin="10,10,80,10">
        <StackLayout Orientation="Horizontal">
            <Label Text="{Binding Author}" FontSize="Micro" TextColor="Gray" />
            <Label Text=" - " FontSize="Micro" TextColor="Gray" />
            <Label Text="{Binding CreatedDateTime}" FontSize="Micro" TextColor="Gray" />
        </StackLayout>
       <Frame BackgroundColor="#ff9999" Padding="10" HasShadow="false">
           <Label Text="{Binding Text}"/>
        </Frame>
    </StackLayout>
</ViewCell>
